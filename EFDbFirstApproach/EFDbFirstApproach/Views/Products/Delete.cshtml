@model EFDbFirstApproach.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Delete</h2>


<form action="/Products/Delete/@Model.ProductID" method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            @Model.ProductName
        </div>
        <div class="form-group col-md-6">
            <label for="Price">Price</label>

            @Model.Price
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductBrand">Brand</label>
            @Model.BrandID
        </div>
        <div class="form-group col-md-6">
            <label for="CategoryID">Categories</label>

            @Model.CategoryID
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="ProductAvailabilityStatus">Availability Status</label>
            @Model.AvailabilityStatus
        </div>
        <div class="form-group col-md-6">
            <label for="DateOfPurchase">DateOfPurchase</label>

            @Model.DateOfPurchase
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="Active">Active</label>
            @Model.Active
        </div>
        
    </div>
    <div class="form-row">
        <button  type ="submit" class="btn btn-success"> Delete</button>
        <button class="btn btn-danger" href="/Products/Index"> Cancel</button>
    </div>
</form>
