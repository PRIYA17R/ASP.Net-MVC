@model List<EFDbFirstApproach.Models.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<h2>Products </h2>
<form class="form-inline" method="post" action="/Products/Index">
    <label for="search"> Search :  </label>
    <input type="text" class="form-control" id="txtSearch" name="Search" value="@ViewBag.searchText" />
    <button class="btn btn-primary"> Go </button>
</form>
<div class="row">
    <div class="col-10"></div>
    <div class="btn btn-primary col-2"> <a href="/Products/Create" style="color:white"> Create </a></div>
</div>

<br>
    

<div class="row">
    <table class="table">
        <tr>
            <th>Product ID</th>
            <th>Product Name </th>

            <th>Product Price</th>
            <th>Date of Purchase </th>

            <th>Avaibility Status</th>
            <th>Category </th>

            <th>Brand</th>
            <th>Active</th>
            <th></th>
        </tr>
      
        @foreach (var product in Model)
        {
    <tr>

        <td>@product.ProductID</td>
        <td>@product.ProductName</td>
        <td>@product.Price</td>
        <td>@product.DateOfPurchase</td>
        <td>@product.AvailabilityStatus</td>
        <td>@product.Category.CategoryName</td>
        <td>@product.Brand.BrandName</td>
        <td>@product.Active</td>
        @*<td>@Html.ActionLink("Edit", "Details", "Products", routeValues: new { @product.ProductID }, htmlAttributes: null)</td>*@

        <td>
            <a href="/Products/Details/@product.ProductID">Details |</a>
        
            <a href="/Products/UpdateProduct/@product.ProductID">Edit |</a>
        
            <a href="/Products/Delete/@product.ProductID">Delete</a>
        </td>

    </tr>
        }
    </table>

</div>