@model EFDbFirstApproach.Models.Product 
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details of Product </h2>
<table>
    <tr>
        <th> Product Id</th>
        <td> @Model.ProductID</td>
    </tr>
    <tr>
        <th> Product Name</th>
        <td> @Model.ProductName</td>
    </tr>
    <tr>
        <th> Product Brand</th>
        <td> @Model.Brand.BrandName</td>
    </tr>
    <tr>
        <th>Active</th>
        <td> @Model.Active</td>
    </tr>
    <tr>
        <th> Avaibility</th>
        <td> @Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th> Purchase Date</th>
        <td> @Model.DateOfPurchase.Value.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Category </th>
        <td> @Model.Category.CategoryName</td>
    </tr>
    <tr>
        <td> <a href="/Products/Index"> Back to Products</a> </td>
    </tr>

</table>

