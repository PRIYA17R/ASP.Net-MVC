<!DOCTYPE html>
<html>
<head>
    <title>Index</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/Product">Product</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/home/Contact">Contact</a>
            </li>
        </ul>
    </nav>

    @{ 
        string StudentGrade;
        if (ViewBag.Marks >= 75)
        {
            StudentGrade = "Grade A";
        }

        else
        { 
        StudentGrade = "Grade B" ;
            }
    }
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>Student Id</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@ViewBag.Name</td>
            </tr>
            <tr>
                <td>Student Address</td>
                <td>@ViewBag.Address</td>
            </tr>
            <tr>
                <td>Student Grade</td>
                <td>@StudentGrade</td>
            </tr>
            <tr>
                <td>Student Subject</td>
                <td>
                    <ul>
                        @foreach (var Sub in ViewBag.Subjects)
                        { 
                            <li>@Sub</li>
                        }
                    </ul>
                </td>
            </tr>
        </table>
    </div>

</body>
</html>

